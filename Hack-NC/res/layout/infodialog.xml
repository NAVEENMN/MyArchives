<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_info_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical" >

 
    <ImageView
        android:id="@+id/infoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/desc"
        android:src="@drawable/infoone" />

   <Button
       android:id="@+id/infobutton"
       style="?android:attr/buttonStyleSmall"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:background="@drawable/settingsbuttonhandler"
       android:gravity="center"
       android:text="@string/infonext"
       android:textColor="#4E4E4E"
       android:textSize="12sp"
       android:textStyle="bold"
       />

    </RelativeLayout>
