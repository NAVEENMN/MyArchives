<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B0B0"
    tools:context=".SignUpActivity" >

     <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top"
    android:background="@drawable/basebg"
    tools:context=".MainActivity" >
    
         
   
     <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/loginbg"
	        android:layout_alignParentBottom="true"
	    	android:gravity="bottom"
	        android:orientation="vertical"
	        android:paddingBottom="5dp"
	        android:paddingTop="5dp"
	        android:shadowColor="#333333"
	        android:shadowDx="2.0"
	        android:shadowDy="2.0"
	        android:shadowRadius="3.0" 
	        android:radius="10dip">
	        
         <!-- ******************************************************* -->
             <LinearLayout
		        android:id="@+id/linearLayout3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/imageborder"
		        android:orientation="horizontal"
		        android:paddingBottom="0dp"
		        android:paddingTop="0dp"
		        android:shadowColor="#333333"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="3.0" 
		        android:radius="10dip">
	   			<ImageButton
		            android:contentDescription="@string/desc"
				    android:id="@+id/ImageButton01"
				    android:layout_width="180dp"
				    android:layout_height="170dp"
				    android:src="@drawable/defaultprofile"
				    android:background = "@drawable/loginbg"
				    android:scaleType="centerCrop"
				    android:onClick="pickimage" />
   			</LinearLayout>
   			<!-- ******************************************************* -->
   			<EditText
			       android:id="@+id/FirstName"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:ems="10"
			       android:hint="@string/FirstName"
			       android:inputType="textPersonName" > 
	   			</EditText>
	   			<EditText
			       android:id="@+id/LastName"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:ems="10"
			       android:hint="@string/LastName"
			       android:inputType="textPersonName" > 
	   			</EditText>

		   <EditText
		       android:id="@+id/Email"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:ems="10"
		       android:hint="@string/Email"
		       android:inputType="textEmailAddress" />

		   <EditText
		       android:id="@+id/Password"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:ems="10"
		       android:hint="@string/Password"
		       android:inputType="textPassword" />

		   <EditText
		       android:id="@+id/RetypePassword"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:ems="10"
		       android:hint="@string/RetypePassword"
		       android:inputType="textPassword" />
		   <LinearLayout
		        android:id="@+id/linearLayout4"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:background="@drawable/loginbg"
		    	android:gravity="bottom"
		        android:orientation="horizontal"
		        android:paddingBottom="5dp"
		        android:paddingTop="5dp"
		        android:shadowColor="#333333"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="3.0" 
		        android:radius="10dip">
		   <RadioButton
		       android:id="@+id/radioButton1"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:textColor="#848484"
	           android:textSize="12sp"
	           android:textStyle="bold"
		       android:text="@string/male"
		       android:onClick="radio1_onClick" />

   			<RadioButton
		       android:id="@+id/radioButton2"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:textColor="#848484"
	           android:textSize="12sp"
	           android:textStyle="bold"
		       android:text="@string/female"
		       android:onClick="radio2_onClick" />
   			<RadioButton
		       android:id="@+id/radioButton3"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:textColor="#848484"
	           android:textSize="12sp"
	           android:textStyle="bold"
		       android:text="@string/dontdisclose"
		       android:onClick="radio3_onClick" />
   			</LinearLayout> 
   			<CheckBox
		       android:id="@+id/checkBox1"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_marginTop="25dp"
		       android:textColor="#848484"
		       android:textSize="12sp"
		       android:textStyle="bold"
		       android:text="@string/terms" />
    
	        <Button
		        android:id="@+id/button3"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background = "@drawable/buttonclicker"
		        android:textColor="#4E4E4E"
		        android:textSize="12sp"
		        android:textStyle="bold"
		        android:text="@string/SignUp" 
		        android:onClick="Signupaccount"/>
              
         </LinearLayout>   

    </RelativeLayout>

</FrameLayout>
