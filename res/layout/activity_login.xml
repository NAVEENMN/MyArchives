<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".Login" >

    
    <!--  ******************************************************************  User Basic Profile data -->
    
    

    <LinearLayout
        android:id="@+id/Profiledata"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#424242"
        android:gravity="top"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:layout_width="0dip"
			android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#424242"
            android:paddingLeft="5dp"
            android:orientation="vertical" >
               
        <ImageButton
            android:id="@+id/ProfileImage"
            android:layout_width="150dp"
			android:layout_height="140dp"
			android:gravity="center"
			android:src="@drawable/defaultprofile"
			android:background = "@drawable/loginbg"
			android:scaleType="centerCrop"
            android:contentDescription="@string/desc"
            android:onClick="on_image_click" />
        </LinearLayout>
                

        <LinearLayout
            android:layout_width="0dip"
			android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
			android:paddingTop="10dp"
            android:orientation="vertical" >
            
         
            
      
            <TextView
                android:id="@+id/FirstName"
                android:textColor="#58D3F7"
                android:textSize="23sp"
                android:text="@string/Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/LastName"
                android:textColor="#58D3F7"
                android:textSize="23sp"
                android:text="@string/Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        
            
            <TextView
                android:id="@+id/Profession"
                android:textColor="#F2F2F2"
                android:textSize="12sp"
                android:text="@string/StudentType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/Worksat"
                android:textColor="#F2F2F2"
                android:textSize="12sp"
                android:text="@string/Major"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
 
            <TextView
                android:id="@+id/CurrentCity"
                android:textColor="#F2F2F2"
                android:textSize="12sp"
                android:text="@string/Gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    
    <!--  ******************************************************************  User Basic Profile data -->
    
    <View
    android:id="@+id/Dividerone"
    android:layout_below="@+id/Profiledata"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="#424242" /> 
    
     <!--  ****************************************************************** Information area        -->
    <LinearLayout
        android:id="@+id/Information"
        android:baselineAligned="false"
        android:layout_below="@+id/Dividerone"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:background="#E6E6E6"
        android:gravity="top"
        android:orientation="horizontal" >
             <!-- ******************************************************************* Map region               -->        
    <fragment 
          android:id="@+id/visitormap"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:name="com.google.android.gms.maps.MapFragment"/>

	<!-- ******************************************************************* Map region               -->
    
      </LinearLayout>      
      <View
    android:id="@+id/Dividertwo"
    android:layout_below="@+id/Information"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="#424242" />     
    <!-- ******************************************************************** Action Buttons          -->
    
    
    
    <LinearLayout
        android:id="@+id/ActionButtons"
        style="?android:attr/buttonBarStyle"
        android:layout_below="@+id/Dividertwo"
        android:background="#F2F2F2"
        android:paddingTop="2dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
  

        <Button
            android:id="@+id/buttonmeet"
            style="?android:attr/buttonBarButtonStyle"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="120sp"
			android:layout_height="120sp"
            android:background="@drawable/curvedbuttonhandler"
            android:text="@string/MeetSomeone"
            android:textColor="#A9E2F3"
            android:textSize="42sp"
            android:textStyle="bold" />
      
    </LinearLayout>

</RelativeLayout>
