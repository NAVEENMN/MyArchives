<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".Login" >

    
    
    <!--  ******************************************************************  User Basic Profile data -->

    <LinearLayout
        android:id="@+id/Profiledata"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5F04B4"
        android:gravity="top"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#424242"
            android:paddingLeft="5dp"
            android:layout_weight="0.08"
            android:orientation="vertical" >
               
        <ImageView
            android:id="@+id/ProfileImage"
            android:layout_width="150dp"
			android:layout_height="140dp"
			android:src="@drawable/defaultprofile"
			android:background = "@drawable/loginbg"
			android:scaleType="centerCrop"
            android:contentDescription="@string/desc" />
        </LinearLayout>
                

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
			android:paddingTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/FirstName"
                android:textColor="#F2F2F2"
                android:textSize="20sp"
                android:text="@string/Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/LastName"
                android:textColor="#F2F2F2"
                android:textSize="20sp"
                android:text="@string/Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/StudentType"
                android:textColor="#F2F2F2"
                android:textSize="12sp"
                android:text="@string/StudentType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/Major"
                android:textColor="#F2F2F2"
                android:textSize="12sp"
                android:text="@string/Major"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/University"
                android:textColor="#F2F2F2"
                android:textSize="12sp"
                android:text="@string/University"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/AgeAndGender"
                android:textColor="#F2F2F2"
                android:textSize="12sp"
                android:text="@string/Gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
        </LinearLayout>
         
    </LinearLayout>
    
    <!--  ******************************************************************  User Basic Profile data -->
    
     <!--  ****************************************************************** Information area        -->
    <LinearLayout
        android:id="@+id/Information"
        android:baselineAligned="false"
        android:layout_below="@+id/Profiledata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E6E6"
        android:gravity="top"
        android:orientation="horizontal" >
    		<TextView
                android:id="@+id/Location"
                android:textColor="#5F04B4"
                android:textSize="18sp"
                android:text="@string/CurrentLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/City"
                android:textColor="#5F04B4"
                android:textSize="18sp"
                android:text="@string/CurrentCounty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/> 
      </LinearLayout>          
    <!-- ******************************************************************** Action Buttons          -->
    <LinearLayout
        android:id="@+id/ActionButtons"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Information"
        android:background="@drawable/loginbg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/updateprofile"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
			android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonclicker"
            android:text="@string/updateprofile"
            android:textColor="#3A01DF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonmeet"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
			android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonclicker"
            android:text="@string/MeetSomeone"
            android:textColor="#3A01DF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/findbestloc"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
			android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonclicker"
            android:text="@string/findbestloc"
            android:textColor="#3A01DF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
