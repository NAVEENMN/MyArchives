<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B0B0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="180dp"
			android:layout_height="170dp"
			android:src="@drawable/defaultprofile"
			android:background = "@drawable/loginbg"
			android:scaleType="centerCrop"
            android:contentDescription="@string/desc" />
                

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
			android:paddingTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Location"
                android:textColor="#3A01DF"
                android:textSize="18sp"
                android:text="@string/CurrentLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/City"
                android:textColor="#3A01DF"
                android:textSize="18sp"
                android:text="@string/CurrentCounty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tellus"
                android:textColor="#3A01DF"
                android:textSize="15sp"
                android:paddingTop="35dp"
                android:text="@string/Tellus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
		       android:id="@+id/TellUsMore"
		       android:textColor="#3A01DF"
                android:textSize="12sp"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:hint="@string/Tellusmore"
		       android:inputType="text" />
        </LinearLayout>
    </LinearLayout>
    
    
    <LinearLayout
            
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
			android:paddingTop="175dp"
			android:paddingBottom="45dp"
            android:orientation="vertical" >
        
        <View
		    android:layout_width="fill_parent"
		    android:layout_height="2dp"
		    android:paddingBottom="75dp"
		    android:background="#585858"/>
        
    </LinearLayout>
      
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbg"
        android:orientation="horizontal"
        android:paddingTop="185dp"
        android:shadowColor="#333333"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="3.0" 
        android:radius="10dip">
  
    <Button
	        android:id="@+id/updateprofile"
	        style="?android:attr/buttonBarButtonStyle"
	        android:layout_marginTop="8dp"
	        android:layout_width="108dp"
	        android:layout_height="wrap_content"
	        android:background = "@drawable/buttonclicker"
	        android:textColor="#3A01DF"
	        android:textSize="12sp"
	        android:textStyle="bold"
	        android:text="@string/updateprofile" />
    <Button
	        android:id="@+id/buttonmeet"
	        style="?android:attr/buttonBarButtonStyle"
	        android:layout_marginTop="8dp"
	        android:layout_width="108dp"
	        android:layout_height="wrap_content"
	        android:background = "@drawable/buttonclicker"
	        android:textColor="#3A01DF"
	        android:textSize="12sp"
	        android:textStyle="bold"
	        android:text="@string/MeetSomeone" />
    <Button
	        android:id="@+id/findbestloc"
	        style="?android:attr/buttonBarButtonStyle"
	        android:layout_marginTop="8dp"
	        android:layout_width="108dp"
	        android:layout_height="wrap_content"
	        android:background = "@drawable/buttonclicker"
	        android:textColor="#3A01DF"
	        android:textSize="12sp"
	        android:textStyle="bold"
	        android:text="@string/findbestloc" />
    
    
    </LinearLayout>
    
    
    
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbg"
        android:layout_alignParentBottom="true"
    	android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="5dp"
        android:shadowColor="#333333"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="3.0" 
        android:radius="10dip">
    <TextView
                android:id="@+id/footnote"
                android:textColor="#3A01DF"
                android:textSize="12sp"
                android:paddingTop="35dp"
                android:gravity="center"
                android:text="@string/footnote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>
