<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".Login" >
    <!--  ******************************************************************  User Basic Profile data --> 

    <LinearLayout
        android:id="@+id/Profiledata"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E9AFE"
        android:gravity="top"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/ProfileImagebackground"
            android:layout_height="wrap_content"
            android:background="#1C1C1C"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical" >
               
        <ImageButton
            android:id="@+id/ProfileImage"
            android:layout_width="80dp"
			android:layout_height="80dp"
			android:gravity="center"
			android:background = "@drawable/loginbg"
			android:scaleType="centerCrop"
            android:contentDescription="@string/desc"
            android:onClick="on_image_click" />
            
        </LinearLayout>
                

        <LinearLayout
            android:id="@+id/profileinfo"
            android:layout_width="0dip"
			android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
			android:paddingTop="5dp"
            android:orientation="vertical" >
       
      
            <TextView
                android:id="@+id/FirstName"
                android:textColor="#D8D8D8"
                android:textSize="20sp"
                android:text="@string/Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/LastName"
                android:textColor="#D8D8D8"
                android:textSize="20sp"
                android:text="@string/Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        
            
            <TextView
                android:id="@+id/address_line"
                android:textColor="#D8D8D8"
                android:textSize="12sp"
                android:text="@string/StudentType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            
        </LinearLayout>
        
    </LinearLayout>
    
    
    <!--  ****************************************************************** search section -->
    
       <LinearLayout
        android:id="@+id/search"
        android:layout_below="@+id/Profiledata"
        android:layout_width="match_parent"
        android:background="#2E9AFE"
        android:layout_height="50dp"
        android:orientation="horizontal">
      
  
           <Button
		        android:id="@+id/myeventsbutton"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:padding="3dp"
			    android:paddingLeft="2dp"
		        android:onClick="view_events"
		        android:background="@android:color/transparent"
			    android:drawableTop="@drawable/my_events"
		        />
           
           
              <AutoCompleteTextView
		        android:id="@+id/autoComplete"
		        android:layout_width="0dp"
                android:layout_height="match_parent"
		        android:paddingLeft="10dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="5dp"
	            android:layout_marginRight="5dp"
	            android:textSize="20sp"
	            android:fontFamily="OpenSansSemiBold"
	            android:inputType="textShortMessage"
	            android:background="@drawable/rounder_edit_text_map"
	            android:layout_weight=".75" />

   
    </LinearLayout>
    
    <!--  ******************************************************************  User Basic Profile data -->

     <!--  ****************************************************************** Information area        -->
    <RelativeLayout
        android:id="@+id/Information"
        android:baselineAligned="false"
        android:layout_below="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6E6"
        android:gravity="top"
        android:orientation="horizontal" >
    <!-- ******************************************************************* Map region               -->        
    <fragment 
          android:id="@+id/visitormap"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:name="com.google.android.gms.maps.MapFragment"/> 


	<!-- ******************************************************************* Map region               -->

	<Button
	    android:id="@+id/chaticon"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:onClick="on_chat_click"
	    android:padding="10dp"
	    android:paddingRight="40dp"
	    android:background="@android:color/transparent"
	    android:drawableTop="@drawable/chaticon"
	    android:text="@string/event_chat" />

	<Button
	    android:id="@+id/add_friends"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginRight="42dp"
	    android:background="@android:color/transparent"
	    android:drawableTop="@drawable/addfriends"
	    android:onClick="Add_Friends"
	    android:padding="10dp"
	    android:paddingRight="40dp"
	    android:text="@string/event_chat" />

	<Button
	    android:id="@+id/addeventicon"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="17dp"
	    android:background="@android:color/transparent"
	    android:drawableTop="@drawable/add_event"
	    android:onClick="Create_A_New_Event"
	    android:padding="10dp"
	    android:paddingRight="40dp"
	    android:text="@string/event_chat" />

    </RelativeLayout>
             
    
    

</RelativeLayout>