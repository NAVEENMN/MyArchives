<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_event_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background= "#A4A4A4"
    android:orientation="vertical" >
    
    <LinearLayout
    android:id="@+id/title_day"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <TextView
                android:id="@+id/New_Event"
                android:textColor="#CEE3F6"
                android:textSize="28sp"      
                android:layout_marginBottom="2dp"
                android:text="@string/plan"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout
    android:id="@+id/sectiona"
    android:layout_below="@+id/title_day"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <ImageButton
            android2:id="@+id/breakfast"
             style="?android:attr/buttonBarButtonStyle"
            android2:layout_width="200dp"
            android2:layout_height="200dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/breakfast"
            android2:text="@string/breakfast" />
        <ImageButton
            android2:id="@+id/lunch"
             style="?android:attr/buttonBarButtonStyle"
            android2:layout_width="200dp"
            android2:layout_height="200dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/lunch"
            android2:text="@string/lunch" />
        
    </LinearLayout>
    
    <LinearLayout
    android:id="@+id/sectionb"
    android:layout_below="@+id/sectiona"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:orientation="horizontal">

        <ImageButton
            android2:id="@+id/linner"
            style="?android:attr/buttonBarButtonStyle"
            android2:layout_width="200dp"
            android2:layout_height="200dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/linner"
            android2:text="@string/linner" />
        <ImageButton
            android2:id="@+id/dinner"
            style="?android:attr/buttonBarButtonStyle"
            android2:layout_width="200dp"
            android2:layout_height="200dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/dinner"
            android2:text="@string/dinner" />
        
    </LinearLayout>

</RelativeLayout>