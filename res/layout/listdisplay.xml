<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/placesection"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:gravity="top"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">  
        
       
     	<LinearLayout
            android:id="@+id/placedetails"
            android:layout_width="0dip"
			android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
			android:paddingTop="10dp"
            android:orientation="vertical" >
            
     	     <LinearLayout
		        android:id="@+id/nameandratings"
		        android:baselineAligned="false"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#FAFAFA"
		        android:orientation="horizontal" >
       
       		<TextView
        		android:id="@+id/title"
        		android:textColor="#424242"
        		android:textSize="18sp"
        		android:text=""
        		android:layout_gravity="left"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" />
       		
       		<RatingBar
                android:id="@+id/placeratings"
                android:layout_width="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_gravity="right"
                android:layout_height="20sp"
                android:numStars="5"
                android:scaleX="0.8"
                android:scaleY="0.8" />
       		</LinearLayout>
      
            <TextView
                android:id="@+id/placeaddress"
                android:textColor="#848484"
                android:textSize="10sp"
                android:text="@string/Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
           
            
            <TextView
                android:id="@+id/placereviews"
                android:textColor="#848484"
                android:textSize="10sp"
                android:text="@string/StudentType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
            <TextView
                android:id="@+id/reviewscore"
                android:textColor="#D8D8D8"
                android:textSize="9sp"
                android:text="@string/Gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
            <TextView
                android:id="@+id/placetype"
                android:textColor="#D8D8D8"
                android:textSize="9sp"
                android:text="@string/Gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
            <TextView
                android:id="@+id/snippet"
                android:textColor="#D8D8D8"
                android:textSize="9sp"
                android:text="@string/Gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
        </LinearLayout>
    
</LinearLayout>