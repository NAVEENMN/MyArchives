<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friendssection"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:gravity="top"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">  
      
        
   <LinearLayout
		android:id="@+id/imageection"
		android:baselineAligned="false"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:background="#1C1C1C"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
		android:gravity="left"
		android:orientation="horizontal" >
       	
     	
        <ImageView
        android:id="@+id/friendimage"
        android:layout_width="60dp"
		android:layout_height="60dp"
		android:gravity="center"
		android:background = "@drawable/loginbg"
		android:scaleType="centerCrop"
        android:contentDescription="@string/desc" />
     	           	       
   </LinearLayout>
    
            
   <LinearLayout
	android:id="@+id/friends_details"
	android:baselineAligned="false"
	android:paddingLeft="5dp"
	android:layout_width="wrap_content"
	android:layout_height="60dp"
	android:background="#FAFAFA"
	android:orientation="vertical" >
       
       		<TextView
        		android:id="@+id/firstname"
        		android:textColor="#424242"
        		android:textSize="20sp"
        		android:text=""
        		android:layout_gravity="left"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" />
       		
       		<TextView
        		android:id="@+id/lastname"
        		android:textColor="#424242"
        		android:textSize="20sp"
        		android:text=""
        		android:layout_gravity="left"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" />
       	
   </LinearLayout>
   
  		<LinearLayout
		        android:id="@+id/friendssend"
		        android:baselineAligned="false"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="#FAFAFA"
		        android:gravity="right"
		        android:orientation="horizontal" >
       	
     	       
     	       <ImageButton
		            android:id="@+id/friendinvite"
		            android:layout_width="60dp"
					android:layout_height="60dp"
					android:gravity="center"
					android:background = "@drawable/accept_button_handler"
					android:scaleType="centerCrop"
		            android:contentDescription="@string/desc"
		            android:onClick="on_image_click" />
     	 
            </LinearLayout>
   
        
</LinearLayout>     	  
