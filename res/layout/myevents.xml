<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myeventssection"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="top"
    android:paddingBottom="2dp"
    android:paddingTop="2dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">  
      
        
   <LinearLayout
		android:id="@+id/myeventsimageection"
		android:baselineAligned="false"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
		android:gravity="left"
		android:orientation="horizontal" >
       	
     	
        <ImageView
        android:id="@+id/myeventhostimage"
        android:layout_width="60dp"
		android:layout_height="60dp"
		android:gravity="center"
		android:background = "@android:color/transparent"
		android:scaleType="centerCrop"
        android:contentDescription="@string/desc" />
     	           	       
   </LinearLayout>
    
            
   <LinearLayout
	android:id="@+id/myevent_event_details"
	android:baselineAligned="false"
	android:paddingLeft="5dp"
	android:layout_width="wrap_content"
	android:layout_height="60dp"
	android:background="@color/white"
	android:orientation="vertical" >
       
       		<TextView
        		android:id="@+id/fullname"
        		android:textColor="@color/main_red"
        		android:textSize="20sp"
        		android:text=""
        		android:layout_gravity="left"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" />
       		
       		<TextView
        		android:id="@+id/eventname"
        		android:textColor="@color/main_red"
        		android:textSize="20sp"
        		android:text=""
        		android:layout_gravity="left"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" />
       	
   </LinearLayout>
   
  		<LinearLayout
		        android:id="@+id/myevent_friendssend"
		        android:baselineAligned="false"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="@color/white"
		        android:gravity="right"
		        android:orientation="horizontal" >

  			<ImageButton
  			    android:id="@+id/myevent_accept"
  			    android:layout_width="60dp"
  			    android:layout_height="60dp"
  			    android:background="@drawable/right"
  			    android:contentDescription="@string/desc"
  			    android:gravity="center"
  			    android:onClick="on_image_click"
  			    android:scaleType="centerCrop" />
     	       
            </LinearLayout>
   
        
</LinearLayout>
