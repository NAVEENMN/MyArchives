<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B0B0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfilelistActivity" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ImagevisitorView01"
            android:layout_width="180dp"
			android:layout_height="170dp"
			android:src="@drawable/defaultprofile"
			android:background = "@drawable/loginbg"
			android:scaleType="centerCrop"
            android:contentDescription="@string/desc" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
			android:paddingTop="40dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtvisitorFirstName"
                android:textColor="#4E4E4E"
                android:textSize="25sp"
                android:text="@string/FirstName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/txtvisitorLastName"
                android:textColor="#4E4E4E"
                android:textSize="25sp"
                android:text="@string/FirstName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
   
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="65dp"
        android:paddingTop="185dp" >    
    <fragment 
          android:id="@+id/map"
          android:paddingTop="15dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:name="com.google.android.gms.maps.MapFragment"/>
	</LinearLayout>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="65dp"
        android:paddingTop="185dp" >
    <fragment 
          android:id="@+id/visitormap"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:name="com.google.android.gms.maps.MapFragment"/>
	</LinearLayout>
	   
    <LinearLayout
        android:id="@+id/linearLayout2"
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbg"
        android:layout_alignParentBottom="true"
    	android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="5dp"
        android:shadowColor="#333333"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="3.0" 
        android:radius="10dip">
  
    <Button
	        android:id="@+id/visitorbuttonnext"
	        style="?android:attr/buttonBarButtonStyle"
	        android:layout_marginTop="5dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background = "@drawable/buttonclicker"
	        android:textColor="#4E4E4E"
	        android:textSize="12sp"
	        android:textStyle="bold"
	        android:text="@string/MeetSomeone" />
    <Button
	        android:id="@+id/visitorbuttonprev"
	        style="?android:attr/buttonBarButtonStyle"
	        android:layout_marginTop="5dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background = "@drawable/buttonclicker"
	        android:textColor="#4E4E4E"
	        android:textSize="12sp"
	        android:textStyle="bold"
	        android:text="@string/MeetSomeone" />
    
    
    </LinearLayout>

</RelativeLayout>

