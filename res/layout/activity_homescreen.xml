<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B0B0"
    tools:context=".HomescreenActivity" >
    

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@drawable/basebg">
    
        <LinearLayout
                tools:context=".MainActivity"
		        android:id="@+id/linearLayout2"
		        android:layout_width="fill_parent"
		        android:background="#5882FA"
		        android:layout_height="180dp"
		        android:orientation="vertical">
		<TextView
			    android:id="@+id/line"
			    style="?android:attr/listSeparatorTextViewStyle"
			    android:background="#FF0000"
			    android:gravity="bottom"
			    android:layout_width="match_parent"
			    android:layout_height="2dp" />
        
       <LinearLayout
		        android:id="@+id/linearLayout3"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="bottom"
		        android:orientation="horizontal">     
			    <Button
			        android:id="@+id/button2"
			        style="?android:attr/buttonStyleSmall"
			        android:layout_width="0dip"
			        android:layout_weight="1"
			        android:layout_height="60dp"
			        android:background = "@drawable/buttonclicker"
			        android:textColor="#F5D0A9"
			        android:textSize="15sp"
			        android:textStyle="bold"
			        android:text="@string/LogIn" 
			        android:onClick="logintoaccount"/> 
			        
			    <Button
			        android:id="@+id/button1"
			        style="?android:attr/buttonStyleSmall"
			        android:layout_width="0dip"
			        android:layout_weight="1"
			        android:layout_height="60dp"
			        android:background = "@drawable/buttonclicker"
			        android:textColor="#F5D0A9"
			        android:textSize="15sp"
			        android:textStyle="bold"
			        android:text="@string/SignUp" 
			        android:onClick="Signupaccount"/>
			        
        </LinearLayout>
        </LinearLayout>
        

</RelativeLayout>

   

</FrameLayout>
