
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.metster.VisitorProfile$PlaceholderFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top"
    android:background="@drawable/basebg" >
    
         
   
  <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/loginbg"
	    	android:gravity="bottom"
	        android:orientation="vertical"
	        android:paddingBottom="5dp"
	        android:paddingTop="5dp"
	        android:shadowColor="#333333"
	        android:shadowDx="2.0"
	        android:shadowDy="2.0"
	        android:shadowRadius="3.0" 
	        android:radius="10dip">
	        
         <!-- ******************************************************* -->
             <LinearLayout
		        android:id="@+id/linearLayout3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/imageborder"
		        android:orientation="horizontal"
		        android:paddingBottom="0dp"
		        android:paddingTop="0dp"
		        android:shadowColor="#333333"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="3.0" 
		        android:radius="10dip">
	   			<ImageView
		            android:contentDescription="@string/desc"
				    android:id="@+id/VisitorImage"
				    android:layout_width="180dp"
				    android:layout_height="170dp"
				    android:src="@drawable/defaultprofile"
				    android:background = "@drawable/loginbg"
				    android:scaleType="centerCrop" />
	   			
	   			<LinearLayout
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
			android:paddingTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/firstname"
                android:textColor="#3A01DF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/FirstName"/>

            <TextView
                android:id="@+id/lastname"
                android:textColor="#3A01DF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/LastName"/>
           
            <TextView
                android:id="@+id/userprofession"
                android:textColor="#3A01DF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/LastName"/>
            <TextView
                android:id="@+id/userworksat"
                android:textColor="#3A01DF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/LastName"/>
        </LinearLayout>
        
	   			
	  
	  
	   			
   </LinearLayout>
   			<!-- ******************************************************* -->
   			
   			<!--*************************************************************** divider-->  			
	   <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
			android:paddingTop="15dp"
			android:paddingBottom="20dp"
            android:orientation="vertical" >
        
        <View
		    android:layout_width="fill_parent"
		    android:layout_height="2dp"
		    android:paddingBottom="75dp"
		    android:background="#585858"/>
        
    </LinearLayout>
           <TextView
                android:id="@+id/userhometown"
                android:textColor="#3A01DF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/LastName"/>
   			<TextView
                android:id="@+id/userhobbies"
                android:textColor="#3A01DF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/LastName"/>
	   			<TextView
                android:id="@+id/usermusic"
                android:textColor="#3A01DF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/LastName"/>

		   <TextView
                android:id="@+id/usermovies"
                android:textColor="#3A01DF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/LastName"/>

		   <TextView
                android:id="@+id/userbooks"
                android:textColor="#3A01DF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/LastName"/>
		  
		 
		   <LinearLayout
		        android:id="@+id/linearLayout4"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:background="@drawable/loginbg"
		    	android:gravity="bottom"
		        android:orientation="horizontal"
		        android:paddingBottom="5dp"
		        android:paddingTop="5dp"
		        android:shadowColor="#333333"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="3.0" 
		        android:radius="10dip">
   			</LinearLayout> 
   			
              
         </LinearLayout>   

    </RelativeLayout> 

