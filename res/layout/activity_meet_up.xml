<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.metster.MeetUp"
    tools:ignore="MergeRootFrame">
    
     <!-- ******************************************************************* Map region               -->        
    <fragment 
          android:id="@+id/visitormap"
          android:layout_width="match_parent"
          android:layout_height="420dp"
          android:name="com.google.android.gms.maps.MapFragment"/>

	<!-- ******************************************************************* Map region               -->

    <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
    <EditText
        android:layout_height="wrap_content"
        android:hint="@string/email_hint"
        android:id="@+id/invite_email"
        android:inputType="textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/do_email_picker"
        android:layout_alignParentLeft="true"></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/do_email_picker"
        android:drawableTop="@drawable/ic_action_new"
        android:layout_alignParentRight="true"
        android:onClick="doLaunchContactPicker"></Button>
    
</RelativeLayout>
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_this_person"
        android:drawableTop="@drawable/ic_action_add_person"
        
        android:onClick="add_this_person"></Button>

        
</FrameLayout>