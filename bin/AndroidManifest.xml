<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.metster"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="18" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <permission
        android:name="com.vogella.android.locationapi.maps.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.metster.HomescreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.metster.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="com.example.metster.HomescreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.metster.HomescreenActivity" />
        </activity>
        <activity
            android:name="com.example.metster.Login"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.example.metster.HomescreenActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.metster.HomescreenActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDSINVA6YF6w_FiZpTBxuWTRr2kpREV1Zo" />

        <activity
            android:name="com.example.metster.ProfilelistActivity"
            android:label="@string/title_activity_profilelist"
            android:parentActivityName="com.example.metster.Login"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.metster.Login" />
        </activity>

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.example.metster.UpdateProfile"
            android:label="@string/title_activity_update_profile"
            android:parentActivityName="com.example.metster.Login"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.metster.Login" />
        </activity>
        <activity
            android:name="com.example.metster.VisitorProfile"
            android:label="@string/title_activity_visitor_profile"
            android:parentActivityName="com.example.metster.ProfilelistActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.metster.ProfilelistActivity" />
        </activity>
        <activity
            android:name="com.example.metster.Profiles"
            android:label="@string/title_activity_profiles" >
        </activity>
        <activity
            android:name="com.example.metster.LoadHome"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_load_home"
            android:parentActivityName="com.example.metster.HomescreenActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.metster.HomescreenActivity" />
        </activity>
        <activity
            android:name="com.example.metster.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>